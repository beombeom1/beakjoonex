#include
#include

int main(){
    char*p = "It is 8";
    char result[100];
    int i;

    for(i=0; p[i]!=''; i++){
        if(isupper(p[i]))
            result[i] = (p[i]-'A'+5)% 26 + 'A';
        else if(islower(p[i]))
            result[i] = (p[i]-'a'+10)% 26 + 'a';
        else if(isdigit(p[i]))
            result[i] = (p[i]-'0'+3)% 10 + '0';
        else if(!(isupper(p[i]) || islower(p[i]) || isdigit(p[i])))
            result[i] = p[i];
    }

    result[i] = '';
    printf("%sn",result);

    return 0;
}

Nd sc 8